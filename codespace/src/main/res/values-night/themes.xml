<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Space" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorText</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:colorForeground">@color/colorBackground</item>
        <item name="android:textColorSecondary">@color/colorIcon</item>
        <item name="android:popupMenuStyle">@style/Theme.Space.PopupMenu</item>
        <item name="colorControlNormal">@color/colorIcon</item>
        <item name="checkboxStyle">@style/Theme.Space.CheckBox</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Theme.Space.Prompt" parent="@style/Theme.Material3.Light.Dialog">
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowBackground">@color/colorBlack24</item>
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/colorBlack24</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Space.TabText">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Theme.Space.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />

    <style name="Theme.Space.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.Space.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorPrimary">#57000000</item>
        <item name="colorPrimaryDark">#57000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Theme.Space.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:backgroundTint">@color/colorCardBackground</item>
        <item name="popupMenuBackground">@drawable/ic_bg_rounded_8sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:popupElevation">@dimen/_1sdp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.Space.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextOpacity</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextSemiBold">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextOpacity</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextExtraBold">
        <item name="fontFamily">@font/extra_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextOpacity</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextRegular">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextOpacity</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextOpacity</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">@dimen/_4sdp</item>
        <item name="boxStrokeColor">@color/ic_input_field_tint</item>
        <item name="boxStrokeErrorColor">#E53935</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1sdp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/colorTextOpacity</item>
    </style>

    <style name="MaterialButtonAccent">
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="iconTint">@color/colorAccentTool</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/colorAccent12</item>
        <item name="iconPadding">@dimen/_4sdp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccentTool</item>
    </style>

    <style name="MaterialButtonTransparent">
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="iconTint">@color/colorIcon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_4sdp</item>
        <item name="rippleColor">@color/colorAccent12</item>
        <item name="backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Theme.Space.BottomSheet" parent="@style/Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Space.BaseBottomSheetDialog" parent="@style/Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Space.BottomSheet</item>
        <item name="android:statusBarColor">@color/colorTransparent
        </item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="android:colorControlActivated">@color/colorAccent
        </item>
        <item name="android:navigationBarColor">@color/colorBlack
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Space.BottomSheetDialogTheme" parent="Theme.Space.BaseBottomSheetDialog" />

    <style name="Theme.Space.FullScreenDialogStyle" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="colorControlNormal">@color/colorIcon</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Widget.Space.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/colorText</item>
        <item name="itemTextColor">@color/colorText</item>
        <item name="itemIconSize">@dimen/_18sdp</item>
        <item name="itemTextAppearance">@style/TextAppearance.Space.TitleSmall</item>
        <item name="itemShapeFillColor">@color/colorPrimary</item>
        <item name="itemRippleColor">@color/colorAccent34</item>
        <item name="itemShapeInsetBottom">@dimen/_4sdp</item>
        <item name="itemShapeInsetEnd">@dimen/_12sdp</item>
        <item name="itemShapeInsetStart">@dimen/_12sdp</item>
        <item name="itemShapeInsetTop">@dimen/_4sdp</item>
        <item name="dividerInsetEnd">@dimen/_4sdp</item>
        <item name="dividerInsetStart">@dimen/_4sdp</item>
        <item name="itemVerticalPadding">@dimen/_14sdp</item>
        <item name="itemHorizontalPadding">@dimen/_24sdp</item>
    </style>

    <style name="TextAppearance.Space.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.Space.BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Space.BottomNavigationView.InActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Space.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorTransparent</item>
        <item name="android:width">@dimen/_56sdp</item>
        <item name="android:height">@dimen/_32sdp</item>
        <item name="shapeAppearance">@style/Theme.Space.Indicator.Shape</item>
    </style>

    <style name="Theme.Space.Indicator.Shape" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Space.TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Space.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Space.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_button_selector</item>
    </style>
</resources>